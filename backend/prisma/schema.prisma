generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Events {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  numberOfDays Int?
  startTime String
  endTime String
  local String

  @@map("Events")
}

model Users {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  nameUser String
  email String @unique
  password String

  @@map("Users")
}